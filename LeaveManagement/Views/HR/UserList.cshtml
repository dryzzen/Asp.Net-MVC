@model IEnumerable<LeaveManagement.ViewModels.UserListViewModel>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Position</th>
            <th title="Annual Leave Days remaining">ALD Remaining</th>
            <th title="Bonus Leave Days remaining">BLD Remaining</th>
            <th title="Sick Leave Days taken">SLD Taken</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.DateOfBirth</td>
                <td>@item.Position</td>
                <td>@item.AnnualLeaveDaysRemaining</td>
                <td>@item.BonusLeaveDaysRemaining</td>
                <td>@item.SickDaysTaken</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    @if (item.Email != "hr@example.com")
                    {
                        <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="RegisterUser" class="btn btn-success">Add New User</a>
    <a class="btn btn-secondary" asp-controller="Account" asp-action="Profile">Back</a>
</div>
@model IEnumerable<dynamic>
<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Position</th>
            <th title="Annual Leave Days remaining">ALD Remaining</th> <!-- Tooltip for Annual Leave Days -->
            <th title="Bonus Leave Days remaining">BLD Remaining</th> <!-- Tooltip for Bonus Leave Days -->
            <th title="Sick Leave Days remaining">SLD Taken</th> <!-- Tooltip for Sick Leave Days -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Email</td>
                <td>@item.User.FirstName</td>
                <td>@item.User.LastName</td>
                <td>@item.User.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td>@item.User.Position</td>
                <td>@item.User.AnnualLeaveDays</td> <!-- Display Annual Leave Days Remaining -->
                <td>@item.User.BonusLeaveDays</td> <!-- Display Bonus Leave Days Remaining -->
                <td>@item.SickDaysTaken</td> <!-- Display Sick Leave Days Taken -->
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.User.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteUser" asp-route-id="@item.User.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="RegisterUser" class="btn btn-success">Add New User</a> <!-- Link to add new user -->
<a class="btn btn-secondary" asp-controller="Account" asp-action="Profile">Back</a>
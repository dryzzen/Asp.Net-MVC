@model LeaveManagement.ViewModels.ResetPasswordViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/authenticationStyle.css" asp-append-version="true" />
}

<div class="auth-container">
    <div class="auth-card text-center">
        <div class="auth-logo">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
        </div>
        <h2 class="auth-title text-success">Password Reset Successful!</h2>

        <div class="confirmation-message">
            <p class="lead">Your password has been updated successfully.</p>
            <p>You can now log in with your new password.</p>

            <div class="d-grid gap-2 mt-4">
                <a asp-action="Login" class="btn auth-btn">
                    <i class="bi bi-box-arrow-in-right"></i> Continue to Login
                </a>
            </div>
        </div>
    </div>
</div>
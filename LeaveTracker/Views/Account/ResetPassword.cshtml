@model LeaveTracker.ViewModels.ResetPasswordViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/authenticationStyle.css" asp-append-version="true" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-logo">
            <i class="bi bi-shield-check"></i>
        </div>
        <h2 class="auth-title">Reset Password</h2>

        <form asp-action="ResetPassword" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmNewPassword"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn auth-btn">Update Password</button>

            <div class="auth-links">
                <a asp-action="Login" class="auth-link">Back to Login</a>
            </div>
        </form>
    </div>
</div>